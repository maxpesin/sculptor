{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

    <div class="card card-body">
    <h3>Edit Routine</h3>
    <form action="/routines/{{routine.id}}?_method=PUT" method="post">
       <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="subject">Exercise</label>
            <input type="text" class="form-control" name="subject" value="{{routine.subject}}" required>
        </div>
        <div class="form-group">
            <label for="muscleTarget">Muscle Target</label>
            <input type="text" class="form-control" name="muscleTarget" value="{{routine.muscleTarget}}" required>
        </div>
        <div class="form-group">
            <label for="musclePrimary">Muscle Primary</label>
            <input type="text" class="form-control" name="musclePrimary" value="{{routine.musclePrimary}}" required>
        </div>
        <div class="form-group">
            <label for="startDate">Date</label>
            <input type="text" class="form-control" name="startDate" value="{{routine.startDate}}" required>
        </div>
        <div class="form-group">
            <label for="startTime">Position</label>
            <input type="text" class="form-control" name="startTime" value="{{routine.startTime}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>